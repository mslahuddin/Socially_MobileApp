<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fitsSystemWindows="true">


    <!-- Chat Header -->
    <RelativeLayout
        android:id="@+id/chatHeader"
        android:layout_width="match_parent"
        android:layout_height="64dp"

        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/left"
            app:tint="#9a585b"
             />


        <!-- Profile and Name Container -->
        <LinearLayout
            android:id="@+id/profileContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Profile Picture -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#9a5a5b" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="IS"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="internshala"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Action Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!-- Video Call Icon -->
            <ImageView
                android:id="@+id/call"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginEnd="16dp"
               android:src="@drawable/vid_call" />

            <!-- Info Icon -->
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                 android:src="@drawable/info"/>

        </LinearLayout>

    </RelativeLayout>

    <!-- Chat Messages Area -->
    <ScrollView
        android:id="@+id/messagesScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/inputContainer"
        android:layout_below="@id/chatHeader"
        android:background="#FAFAFA"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="6dp"
            android:gravity="bottom"

            >

            <!-- Spacer to push content to bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="500dp" />

            <!-- Time Stamp -->


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="6:40 PM"
                android:textColor="#888888"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:layout_marginTop="0dp"
                android:orientation="horizontal">


                <!-- Message Bubble -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="1dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#9a5a5b"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:text="Hello"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Message Input Container -->
    <RelativeLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Input Field Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F0F0F0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <!-- Profile Picture in Input -->
            <RelativeLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/camera" />

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <!-- Message Input Text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Message..."
                android:textColor="#888888"
                android:textSize="16sp" />

            <!-- Input Actions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Mic Icon -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mic" />

                <!-- Gallery Icon -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/gallery" />

                <!-- Emoji Icon -->
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/emoji" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>