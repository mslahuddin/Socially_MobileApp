<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Status Bar Area -->
    <RelativeLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="9:30"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Status Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:background="#000000" />

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:background="#000000" />

            <View
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:background="#000000" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Tab Layout -->
    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/statusBar"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_marginStart="0dp"
            android:layout_gravity="left"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Following"
                android:textColor="#9a585b"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <View
                android:layout_width="134dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="#CCCCCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@android:color/white"
            android:gravity="center"
            android:layout_marginStart="0dp"
            android:layout_gravity="left"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="You"
                android:textColor="#9a585b"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <View
                android:layout_width="134dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:background="#9a585b" />
        </LinearLayout>

    </LinearLayout>
    <!-- Activity Feed -->
    <ScrollView
        android:id="@+id/activityScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:layout_below="@id/tabLayout"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Follow Requests Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Follow Requests"
                    android:textColor="#9a585b"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <!-- New Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp" />

            <!-- Activity Item 1 - karennne liked your photo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <!-- Profile Picture -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>

                <!-- Activity Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="karennne liked your photo. 1h"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Post Thumbnail -->
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/community1" />

            </RelativeLayout>

            <!-- Today Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:layout_marginTop="8dp" />

            <!-- Activity Item 2 - kiero_d, zackjohn and 26 others liked your photo -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kiero_d, zackjohn and 26 others liked your photo. 3h"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/community2" />

            </RelativeLayout>

            <!-- This Week Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:layout_marginTop="8dp" />

            <!-- Activity Item 3 - craig_love mentioned you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="60dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="craig_love mentioned you in a comment: @jacob_w exactly.. 2d"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                    <!-- Reply Button -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/reply_button_bg"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reply"
                            android:textColor="#999999"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/community3" />

            </RelativeLayout>

            <!-- Activity Item 4 - martini_rond started following you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="martini_rond started following you. 3d"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Message Button -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/message_button_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:text="Message"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Activity Item 5 - maxjacobson started following you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile5"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/me" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="maxjacobson started following you. 3d"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Message Button -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/message_button_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:text="Message"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- Activity Item 6 - mis_potter started following you -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile6"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:layout_marginEnd="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mis_potter started following you. 3d"
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Follow Button -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/follow_button_bg"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="6dp"
                    android:text="Follow"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- This Month Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Month"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                android:layout_marginTop="8dp" />

            <!-- Activity Item 7 - Another activity item -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfile7"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    android:elevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="56dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mo_hemedaheey started following you."
                        android:textColor="#000000"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <RelativeLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_centerVertical="true"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:weightSum="5">

            <!-- Home -->
            <ImageView
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:contentDescription="Home"
                android:scaleType="centerInside"
                android:src="@drawable/home" />

            <!-- Search -->
            <ImageView
                android:id="@+id/search"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:contentDescription="Search"
                android:scaleType="centerInside"
                android:src="@drawable/Search" />

            <!-- Add -->
            <ImageView
                android:id="@+id/nav_add"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:contentDescription="Add"
                android:scaleType="centerInside"
                android:src="@drawable/Create" />

            <!-- Favorite (Heart - Active) -->
            <ImageView
                android:id="@+id/nav_favorite"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:contentDescription="Favorite"
                android:scaleType="centerInside"
                android:src="@drawable/Like"
                app:tint="#9a585b" />

            <!-- Profile -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1Profile"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:elevation="0dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="134dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="#CCCCCC" />

    </RelativeLayout>

</RelativeLayout>