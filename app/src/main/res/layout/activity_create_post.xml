<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="true">


    <RelativeLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Cancel"
            android:textColor="#876e6b"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/titleRecents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recents"
                android:textColor="#8a5460"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
               android:src="@drawable/arroow_down"
                android:textColor="#8a5460"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Next"
            android:textColor="#8a5460"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        >


        <RelativeLayout
            android:id="@+id/previewContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/toolbarContainer"
            android:background="@drawable/community3">   <!-- âœ… use background -->



            <ImageView
                android:id="@+id/previewImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/community3" />

            <!-- Selection controls overlay -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/community3"/>

        </RelativeLayout>


        <ScrollView
            android:id="@+id/photoGridContainer"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#E8E8E8"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community3"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#D4B8A3"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community1"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#8FBC8F"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community1"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#E6E6FA"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community1"/>/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#87CEEB"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community3"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F0E68C"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community2"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#CD853F"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community1"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#87CEFA"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community2"/>/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Third Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#DDA0DD"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community1"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#98FB98"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community3"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2F4F4F"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community2"/>/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:layout_width="0dp"
                        android:layout_height="76dp"
                        android:layout_weight="1"
                        android:layout_marginStart="1dp"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#9a585b"
                            android:scaleType="centerCrop"
                            android:src="@drawable/community3"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>




        <LinearLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/photoGridContainer"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:padding="12dp">

            <TextView
                android:id="@+id/btnLibrary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Library"
                android:textColor="#9a585b"
                android:textSize="16sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/btnPhoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Photo"
                android:textColor="#9a585b"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp" />

            <TextView
                android:id="@+id/camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Video"
                android:textColor="#9a585b"
                android:textSize="16sp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="12dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Bottom indicator -->
        <View
            android:layout_width="134dp"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:background="#9a585b"
            android:backgroundTint="#9a585b" />

    </RelativeLayout>

</RelativeLayout>